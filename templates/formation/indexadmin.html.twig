<div class="card">
    <div class="card-body">

        <h5 class="card-title text-center">Table des formations </h5>

        <!-- Table with hoverable rows -->
        <table class="table table-hover">
            <thead>
            <tr>
                <th scope="col"></th>
                <th scope="col">image</th>
                <th scope="col">nom de formation</th>
                <th scope="col">description</th>
                <th scope="col">formateur</th>
                <th scope="col">lieu de formation</th>
                <th scope="col">Nombre participants</th>
                <th scope="col">date de formation</th>
            </tr>
            </thead>
            <tbody>
            {% for formation in formations %}
            <tr>
                <th scope="row"></th>
                <td><img src= {{asset('uploads/' ~ formation.imageformation)}} alt="" class="img-fluid"  ></td>
                <td>{{ formation.nomFormation }}</td>
                <td>{{ formation.descriptionFormation }}</td>
                <td>{{ formation.formateur }}</td>
                <td>{{ formation.lieuFormation }}</td>
                <td>{{ formation.Participation|length }}</td>
                <td>{{ formation.dateFormation ? formation.dateFormation|date('Y-m-d') : '' }}</td>
                <td><a href="{{ path('app_formation_edit', {'id': formation.id}) }}" class="btn btn-primary mb-2">modifier</a></td>
                <td>{{ include('formation/_delete_form.html.twig') }}</td>

            </tr>
            </tbody>
            {% else %}

