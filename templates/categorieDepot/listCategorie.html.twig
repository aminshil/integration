            <div class="card-body">
            <div class="d-flex justify-content-center align-items-center">
                        <a class="btn btn-warning btn-sm me-3" href="{{ path('app_list_Categorie', {'sortField': 'id', 'sortOrder': (sortField == 'id' and sortOrder == 'asc') ? 'desc' : 'asc'}) }}">Tri ID</a>
                        <a class="btn btn-warning btn-sm" href="{{ path('app_list_Categorie', {'sortField': 'Nom', 'sortOrder': (sortField == 'Nom' and sortOrder == 'asc') ? 'desc' : 'asc'}) }}">Tri Nom</a>
                    </div>

                <h1 class="card-title">Liste des Catégories</h1>
                <table class="table table-bordered datatable" id="myTable">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Nom</th>
                            <th>Description</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for categorie in listCategorie %}
                            <tr>
                                <td>{{ categorie.id }}</td>
                                <td>{{ categorie.Nom }}</td>
                                <td>{{ categorie.Description }}</td>
                                <td>
                                    <a href="{{ path('app_modifier_Categorie', {'id': categorie.id}) }}"
                                        class="btn btn-primary btn-sm">Modifier</a>
                                    <a href="{{ path('app_supprimer_Categorie', {'id': categorie.id}) }}"
                                        class="btn btn-danger btn-sm"> Supprimer</a>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="4">Aucune catégorie disponible</td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>

                <a href="{{ path('app_ajouter_Categorie') }}" class="btn btn-success mt-3">Ajouter Catégorie</a>
