{% extends 'base.html.twig' %}

{% block title %}Reset Your Password{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css">
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .form-gap {
            padding-top: 70px;
        }

        .custom-green-btn {
            background-color: #4CAF50; /* Green color */
            color: white;
        }

        .custom-green-btn:hover {
            background-color: #45a049; /* Darker green color on hover */
        }
    </style>
{% endblock %}

{% block body %}
    <div class="form-gap"></div>
    <div class="container">
        <div class="row">
            <div class="col-md-4 col-md-offset-4">
                <div class="panel panel-default">
                    <div class="panel-body">
                        <div class="text-center">
                            <h3><i class="fa fa-lock fa-4x"></i></h3>
                            <h2 class="text-center">Forgot Password?</h2>
                            <p>You can reset your password here.</p>
                            <div class="panel-body">
                                {{ form_start(requestForm, {'attr': {'class': 'form', 'autocomplete': 'off'}}) }}
                                <div class="form-group">
                                    <div class="input-group">
                                        <span class="input-group-addon"><i class="glyphicon glyphicon-envelope color-blue"></i></span>
                                        {{ form_row(requestForm.email, {'attr': {'class': 'form-control', 'placeholder': 'Email Address'}}) }}
                                    </div>
                                </div>
                                <div class="form-group">
                                    <button name="recover-submit" class="btn btn-lg btn-block custom-green-btn" type="submit">Reset Password</button>
                                </div>
                                <input type="hidden" class="hide" name="token" id="token" value="">
                                {{ form_end(requestForm) }}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
