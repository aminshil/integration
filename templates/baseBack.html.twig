 <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        function displayGraph() {
            console.log('Button clicked!');
            // Fetch user stats data
            fetch('{{ path('user_stats') }}')
                .then(response => response.json())
                .then(data => {
                    // Update the chart with the fetched data
                    updateChart(data);
                })
                .catch(error => console.error('Error fetching user stats:', error));
        }

        // Function to update the Chart.js chart
        function updateChart(data) {
            var ctx = document.getElementById('userStatsChart').getContext('2d');
            var myChart = new Chart(ctx, {
                type: 'pie', // Change to 'pie' for a pie chart
                data: {
                    labels: ['Verified', 'Unverified'],
                    datasets: [{
                        label: 'User Stats',
                        data: [data.verified, data.unverified],
                        backgroundColor: [
                            'rgba(54, 162, 235, 0.8)', // Darker blue
                            'rgba(255, 99, 132, 0.8)', // Darker red
                        ],
                        borderColor: [
                            'rgba(54, 162, 235, 1)', // Original blue
                            'rgba(255, 99, 132, 1)', // Original red
                        ],
                        borderWidth: 1,
                    }],
                },
                options: {
                    legend: {
                        display: true,
                        position: 'right',
                    },
                    maintainAspectRatio: false, // Set to false to allow the chart to be smaller
                },
            });
        }
    </script>


