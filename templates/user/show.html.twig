{% extends 'baseBack.html.twig' %}

{% block title %}User{% endblock %}
{% block content %}

{% block body %}
    <div class="container mt-4">
        <h1>User Details</h1>

        <div class="card">
            <div class="card-body">
                <table class="table table-bordered">
                    <tbody>
                    <tr>
                        <th scope="row">Id</th>
                        <td>{{ user.id }}</td>
                    </tr>
                    <tr>
                        <th scope="row">Email</th>
                        <td>{{ user.email }}</td>
                    </tr>
                    <tr>
                       
                    
                    </tr>
                    <tr>
                        
                        
                    </tr>
                    <tr>
                        <th scope="row">Nom</th>
                        <td>{{ user.nom }}</td>
                    </tr>
                    <tr>
                        <th scope="row">Prenom</th>
                        <td>{{ user.prenom }}</td>
                    </tr>
                    <tr>
                        <th scope="row">Image</th>
                        <td>
                            {% if user.image %}
                                <img src="{{ asset('uploads/images/' ~ user.image) }}" alt="User Image">
                            {% else %}
                                No Image Available
                            {% endif %}
                        </td>
                    </tr>
                    <tr>
                        <th scope="row">Date de Naissance</th>
                        <td>{{ user.dateDeNaissance ? user.dateDeNaissance|date('Y-m-d') : 'Not provided' }}</td>
                    </tr>
                    <tr>
                        <th scope="row">Is Verified</th>
                        <td>{{ user.isVerified ? 'Yes' : 'No' }}</td>
                    </tr>
                    </tbody>
                </table>

                <a href="{{ path('admin_dashboard') }}" class="btn btn-secondary">Back to List</a>
                <a href="{{ path('app_user_edit', {'id': user.id}) }}" class="btn btn-primary">Edit</a>
            </div>
        </div>

        {{ include('user/_delete_form.html.twig') }}
    </div>
{% endblock %}
{% endblock %}
